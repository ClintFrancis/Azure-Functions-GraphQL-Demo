@hostname = localhost
@port = 7071
@host = {{hostname}}:{{port}}
@contentType = application/json
@createdAt = {{$datetime iso8601}}

###
# Make a sample GraphQL Call
# @name demoCall
POST http://{{host}}/api/graphql HTTP/1.1
content-type: {{contentType}}

{
    "query":"query humans {
        human(id: \"1\") {
            name, 
            appearsIn
        }
    }",
    "variables":{}
}
